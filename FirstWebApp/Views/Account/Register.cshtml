@model FirstWebApp.Models.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<div class="container">
    <h1>Реєстрація</h1>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <hr>

        <label asp-for="Email">Введіть E-mail</label><br />
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email" />


        <label asp-for="Password">Введіть пароль</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password" />


        <label asp-for="ConfirmPassword">Повторіть пароль</label><br />
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" />
        <hr>
        <button type="submit" class="registerbtn">Зареєструватись</button>
</div>
    </form>
