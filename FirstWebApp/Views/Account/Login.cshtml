@model FirstWebApp.Models.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<div class="container">

    <h1>Вхід на сайт</h1>

    <a asp-action="Register" asp-controller="Account">Реєстрація</a>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <hr>

        <label asp-for="Email">Введіть Email</label>
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email" />


        <label asp-for="Password">Введіть пароль</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password" />
        <hr>

        <button type="submit" class="registerbtn">Увійти</button> 
        </div>
      


    </form>
