@model IEnumerable<FirstWebApp.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h2>Розклад</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               День
            </th>
            
            <th>
               Викладач
            </th>
            <th>
               Аудиторія
            </th>
            <th>
                Назва предмету
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.GroupName == @ViewBag.userGroupName)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherId)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Audithory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    

                </tr>
            }
        }
    </tbody>
</table>
